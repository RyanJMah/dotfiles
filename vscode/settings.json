{    
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 11,

    // TURN OFF TELEMETRY
    "telemetry.telemetryLevel": "off",
    "extensions.autoUpdate": false,
    
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "security.workspace.trust.untrustedFiles": "open",

    "editor.fontFamily": "ComicCode Nerd Font",
    "terminal.integrated.fontFamily": "ComicCode Nerd Font",

    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false ,
    "editor.stickyTabStops": true,

    "editor.glyphMargin": true,
    // "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.scrollBeyondLastLine": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.inlineSuggest.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",

    "editor.find.autoFindInSelection": "multiline",

    "zenMode.hideStatusBar": false,
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideTabs": false,

    "explorer.sortOrder": "type",

    "search.followSymlinks": false,

    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.macOptionClickForcesSelection": true,

    "git.mergeEditor": false,

    "workbench.editor.enablePreview": true,
    "workbench.iconTheme": "material-icon-theme",

    "editor.minimap.enabled": false,

    "breadcrumbs.enabled": true,

    "remote.SSH.localServerDownload": "always",

    // "vim.statusBarColorControl": true,
    // "vim.statusBarColors.normal": ["#5ad4e6", "#0d0d0e"],
    // "vim.statusBarColors.insert": ["#7bd88f", "#0d0d0e"],
    // "vim.statusBarColors.visual": ["#948ae3", "#0d0d0e"],
    // "vim.statusBarColors.visualline": ["#b39df3", "#0d0d0e"],
    // "vim.statusBarColors.visualblock": ["#b39df3", "#0d0d0e"],
    // "vim.statusBarColors.searchinprogressmode": ["#fc9867", "#0d0d0e"],
    // "vim.statusBarColors.commandlineinprogress": ["#fc9867", "#0d0d0e"],

    "vim.scroll": 15,
    
    "vim.foldfix": true,

    "vim.searchHighlightColor": "#a9dc76",
    "vim.searchMatchColor": "#a9dc76",
    "vim.searchMatchTextColor": "#0d0d0e",
    "vim.searchHighlightTextColor": "#0d0d0e",

    "vim.enableNeovim": true,
    "vim.neovimUseConfigFile": true,
    "vim.neovimPath": "/Users/ryanmah/bin/nvim-install/bin/nvim",

    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.ignorecase": false,

    "vim.autoindent": true,
    "vim.useSystemClipboard": true,

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vscode-vimrc",

    "vim.normalModeKeyBindings": [
        {
            "before": ["g", "d"],
            "command": "runCommands",
            "args": {
                "commands": [
                    {
                        "command": "editor.action.revealDeclaration"
                    },
                    {
                        "command": "cursorMove",
                        "args": {
                            "to": "viewPortCenter"
                        }
                    }
                ]
            }
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.revealDefinition"],
        },
        {
            "before": ["g", "b"],
            "after": ["ctrl+o"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        // {
        // "before": ["u"],
        // "commands":["undo"]
        // },
        // {
        // "before": ["<C-r>"],
        // "commands": ["redo"]
        // },
    ],

    "clangd.onConfigChanged": "restart",

    "C_Cpp.doxygen.generatedStyle": "/**",

    "files.associations": {
        "*.m": "matlab",
        "*.json": "jsonc",
        "*.c": "cpp"
    },

    "material-icon-theme.files.associations": {
        "*.m": "matlab"
    },
    "material-icon-theme.folders.associations": {
        "inc": "include",
    },

    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.enableBell": false,

    "workbench.colorCustomizations": {
        "editorBracketMatch.background": "#b6b6b659",
        "editorBracketHighlight.foreground1": "#FFB86C",
        "editorBracketPairGuide.activeBackground1": "#FFB86C",
        "editorBracketHighlight.foreground2": "#DB71D8",
        "editorBracketPairGuide.activeBackground2": "#DB71D8",
        "editorBracketHighlight.foreground3": "#87CEFA",
        "editorBracketPairGuide.activeBackground3": "#87CEFA",
        "editorBracketHighlight.unexpectedBracket.foreground": "#FF4F4F",
        "statusBar.foreground": "#F6F8FA",
        "statusBar.debuggingForeground": "#F6F8FA"
    },
    "codesnap.transparentBackground": true,
    "window.commandCenter": false,
}
