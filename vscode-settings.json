{
    // "editor.fontFamily": "ComicCode Nerd Font",
    "editor.fontSize": 14.5,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false ,
    "editor.stickyTabStops": true,
    "editor.glyphMargin": false,
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.scrollBeyondLastLine": true,

    "workbench.editor.enablePreview": true,

    // "vim.enableNeovim": true,
    // "vim.neovimUseConfigFile": true,

    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#78dce8", "#181819"],
    "vim.statusBarColors.insert": ["#a9dc76", "#181819"],
    "vim.statusBarColors.visual": ["#b39df3", "#181819"],
    "vim.statusBarColors.visualline": ["#b39df3", "#181819"],
    "vim.statusBarColors.visualblock": ["#b39df3", "#181819"],
    "vim.statusBarColors.searchinprogressmode": "#fc9867",
    "vim.statusBarColors.commandlineinprogress": "#fc9867",
    "vim.searchHighlightColor": "#a9dc76",
    "vim.searchMatchColor": "#ff6188",

    "vim.hlsearch": true,
    "vim.autoindent": true,
    "vim.incsearch": true,
    "vim.matchpairs": "",
    "vim.useSystemClipboard": true,

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vscode-vimrc",
    

    // "workbench.colorCustomizations": {

    //     "editorError.foreground": "#000000",
    //     "editorWarning.foreground": "#000000",
    //     "editorInfo.foreground": "#000000",

    //     "tab.activeBackground": "#00000045",
    //     "tab.hoverBackground": "#00000045",
    //     "tab.activeBorder": "#00000000"

    // },
    "breadcrumbs.enabled": false,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 14,
    // "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
    // "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
    "C_Cpp.default.enableConfigurationSquiggles": false,
    "files.associations": {
        "*.m": "matlab",
        "*.json": "jsonc",
        "*.c": "cpp"
    },

    "material-icon-theme.files.associations": {
        "*.m": "matlab"
    },
    "material-icon-theme.folders.associations": {
        "inc": "include",
    },
    "workbench.iconTheme": "material-icon-theme",
    "window.openFoldersInNewWindow": "on",
    "editor.largeFileOptimizations": false,
    // "workbench.editorAssociations": {
    //     "*.pdf": "latex-workshop-pdf-hook"
    // },
    "javascript.validate.enable": false,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.enableBell": true,

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "workbench.colorCustomizations": {
        "editorBracketMatch.background": "#b6b6b659",
        "editorBracketHighlight.foreground1": "#FFB86C",
        "editorBracketPairGuide.activeBackground1": "#FFB86C",
        "editorBracketHighlight.foreground2": "#DB71D8",
        "editorBracketPairGuide.activeBackground2": "#DB71D8",
        "editorBracketHighlight.foreground3": "#87CEFA",
        "editorBracketPairGuide.activeBackground3": "#87CEFA",
        "editorBracketHighlight.unexpectedBracket.foreground": "#FF4F4F",
        "statusBar.noFolderBackground": "#b39df3",
        "statusBar.debuggingBackground": "#b39df3",
        "statusBar.background": "#b39df3",
        "statusBar.foreground": "#181819",
        "statusBar.debuggingForeground": "#181819"
    },

    // "bracketPairColorizer.consecutivePairColors": [
